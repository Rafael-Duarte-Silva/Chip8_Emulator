{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "run chip8",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "preLaunchTask": "C/C++: gcc build SDL2 file",
      "args": [
        "${workspaceFolder}/programs/Pong_(1_player).ch8"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "pretty print",
          "text": "-enable-pretty-printing",
          "ignoreFailures": false
        }
      ]
    }
  ]
}
