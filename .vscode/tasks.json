{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "make build chip8",
      "type": "shell",
      "command": "make",
      "args": [
        "all"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "make clean chip8",
      "type": "shell",
      "command": "make",
      "args": [
        "clean"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
