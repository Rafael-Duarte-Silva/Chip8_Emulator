{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build SDL2 file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "`sdl2-config", "--cflags`",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "`sdl2-config", "--libs`"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "shell": {
                    "executable": "/bin/bash",
                    "args": ["-c"]
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "C with SDL2."
        }
    ]
}
